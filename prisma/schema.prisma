datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}


generator client {
    provider = "prisma-client-js"
}


model Author {
    id     Int     @id @default(autoincrement())
    name   String  @unique
    age    Int
    movies Movie[]

    createdAt DateTime @default(now())
    updateAt  DateTime @updatedAt


    @@map("authors")
}


model Category {
    id   Int    @id @default(autoincrement())
    name String @unique
    
    movie Movie[]

    @@map("categories")
}


model Gender {
    id Int @id @default(autoincrement())
    name String @unique

    movie Movie[]

    @@map("genders")
}


model Movie {
    id       Int    @id @default(autoincrement())
    name     String @unique
    duration Float

    authorId Int @unique
    categoryId Int @unique
    genderId Int @unique

    createdAt DateTime @default(now())
    updatedAt  DateTime @updatedAt

    author   Author @relation(fields: [authorId], references: [id])
    category Category @relation(fields: [categoryId], references: [id])
    genre Gender @relation(fields: [genderId], references: [id])

    @@map("movies")
}


model User {
    id       Int     @id @default(autoincrement())

    firstName String
    lastName String 

    email    String @unique
    hashedPassword String
    hashedRt String?

    admin Boolean @default(false)

    createdAt DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@map("users")
}
